@using Microsoft.AspNetCore.Http;
@model List<Pacotes>
@{
    ViewData["Title"] = "Pacotes";

    string conta = Context.Session.GetString("conta");

    if (conta == "usuario")
    {
        <style>
            .card-button button {
                display: none;
            }
        </style>
    }
}

<style>
    .nav-bar,
    footer,
    .menu-hamburger ul {
        background-color: #34495e !important;
        border: none !important;
    }

    .fundo-img {
        background-image: none !important;
        min-height: none !important;
        overflow-y: scroll !important;
    }
</style>

<main class="fundo-color">

    <div class="pacotes-content">
        <div class="icone-titulo"><img class="icones-content" src="~/img/icone-pacotes.png">
            <h3 class="titulos">PACOTES</h3>
        </div>
        <a href="#"><img src="~/img/icone-shopping.png" class="icones-content" id="icone-sacola"></a>
    </div>

    <p class="paragrafos">Aproveite agora os descontos exclusivos com parcelamento em até 15x sem juros! Não perca essa
        chance, compre e viaje quando quiser!</p>

    <div class="splide">
        <div class="splide__track">
            <ul class="splide__list">
                @foreach (Pacotes p in Model)
                {
                    <li class="splide__slide">

                        <div class="cards" id="card01">
                            <div class="card-button">

                                <a class="button" asp-action="Registro_Pacotes"><img src="~/img/icone-add.png"
                                    title="Adicionar novo pacote" class="icones-content"></a>

                                <a class="button" href="/Home/Excluir_Pacotes?id=@p.id"><img src="~/img/icone-close.png"
                                    title="Remover" class="icones-content"></a>

                            </div>
                            <div class="cards-text">
                                <h6>@p.nome</h6>

                                <ul>
                                    <li>Saindo de @p.origem</li>

                                    <li>Saída: @p.saida</li>

                                    <li>Retorno: @p.retorno</li>

                                    <li>Preço ida e volta: <b>@p.preco R$</b></li>

                                    <li>Usuário: @p.usuario</li>
                                </ul>

                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

</main>
